@import url(https://fonts.googleapis.com/css?family=Raleway:200,300,900);
@sans-serif: 'Raleway', Arial, sans-serif;
@header__textColor: white;

@media all {
	body {
		width: 100%;
		font-family: @sans-serif;
		margin: 0;
	}

	.header {
		background-image: url('../img/header__bg.png');
		background-size: cover;
		width: 100%;
		height: 726px;	
	
		&__logo {
		position: absolute;
		top: 30px;
		left: 97px;
		width: 156px;
		height: 60px;
 		background-image: url('../img/header__logo.png');
		background-repeat: no-repeat;
		background-size: contain;
		}
	

		&__hamburger {
		position: absolute;
		display: inline-block;
		background-image: url('../img/header__hamburger.png');
		background-repeat: no-repeat;
		background-size: contain;
		background-position: center;
		border: 2px solid transparent;
		right: 93px;
		top: 34px;
		padding: 5px 10px;
		width: 30px;
		height: 28px;
			&:hover {
				border: 2px solid white;
				border-radius: 3px;
			}
		}
		
		&__centeredContent {
			display: flex;
			padding-top: 200px;
			justify-content: center;
			align-items: center;
			flex-wrap: wrap;
		}

		&__avatar {
		 position: relative;
		padding: 20px;
		border: 1px solid white;
		border-radius: 50%;
			
		&Image {
			position: relative;
			width: 250px;
			height: 250px;
			background-image: url('../img/header__avatar.png');
			background-repeat: no-repeat;
			background-size: contain;
			}
		}
		
		&__content {
			position: relative;
			padding: 20px 30px;
			color: @header__textColor;
		}
				
		&__boldText {
			font-weight: 900;
			font-size: 32px;
			letter-spacing: 19.3px;
		}
				
		&__line {
			margin-top: 10px;
			align: center;
			width: 65%;
			height: 1px;
			border: 0;
			background-color: #52edc7;
		}
				
		&__upperCaseText {
			margin-top: 10px;
			font-weight: 200;
			font-size: 48.5px;
			letter-spacing: 1px;
		}
			
		&__button {
			margin:28px 0 5px 89px;
			padding: 18px 0 17px 27px;
			border: 2px solid white;
			width: 218px;
			border-radius: 3px;
			font-weight: 400;
			font-size: 14px;
			letter-spacing: 1.3px;
			color: @header__textColor;
			transition-property: all;
			transition-duration: .2s;
			&:hover {
				color: #206957;
				background-color: #52edc7;
				border-color: #52edc7;
				border-bottom: 2px solid #fff;				
			}
		}		
	}
}

@media (max-width: 900px) {
	.header {
		height: 100%;	
		&__hamburger {
			right: 20px;
		}
				
		&__logo {
		left: 20px;
		}
		
		&__centeredContent {
			padding-top: 100px;
		}

		&__avatar {
		&Image {
			width: 180px;
			height: 180px;
			}
		}
		
		&__content {
			padding: 10px;
			text-align: center;
		}
				
		&__boldText {
			font-size: 32px;
			letter-spacing: 5px;
		}
				
		&__line {
		}
				
		&__upperCaseText {
			font-size: 35px;
		}
			
		&__button {
			margin:28px auto 5px;
			padding: 18px 0 17px 0px;
			&:active {
				color: #206957;
				background-color: #52edc7;
				border-color: #52edc7;
				border-bottom: 2px solid #fff;				
			}
		}	
	}
}