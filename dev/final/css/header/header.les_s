@import url(https://fonts.googleapis.com/css?family=Raleway:200,300,900);
@sans-serif: 'Raleway', Arial, sans-serif;
@header__textColor: white;

	body {
		width: 100%;
		font-family: @sans-serif;
		margin: 0;
	}

	.header {
/* 		display: block; */
/* 		position: relative;		 */
		background-image: url('../img/header__bg.png');
		background-size: cover;
		width: 100%;
		height: 726px;	
	
		&__logo {
		position: absolute;
		top: 30px;
		left: 97px;
		width: 156px;
		height: 60px;
 		background-image: url('../img/header__logo.png');
		background-repeat: no-repeat;
		background-size: contain;
		}
	
		&__hamburger--border {
			position: absolute;
			border: 2px solid transparent;
			top: 32px;
			right: 85px;
			padding: 10px;
		}

		&__hamburger--border:hover {
			border: 2px solid white;
			border-radius: 3px;
		}

		&__hamburger {
		position: relative;
		background-image: url('../img/header__hamburger.png');
		background-repeat: no-repeat;
		background-size: contain;
		width: 34px;
		height: 22px;
		}

		&__avatar {
		position: absolute;
		top: 236px;
		left: 294px;
		padding: 7px;
		border: 1px solid white;
		border-radius: 50%;
			
		&Image {
			position: relative;
			width: 250px;
			height: 250px;
			background-image: url('../img/header__avatar.png');
			background-repeat: no-repeat;
			background-size: contain;
			}
		}
		
		&__content {
			position: absolute;
			top: 285px;
			left: 655px;
			color: @header__textColor;
		}
				
		&__boldText {
			font-weight: 900;
			font-size: 32px;
			letter-spacing: 19.3px;
		}
				
		&__line {
			margin-top: 10px;
			align: center;
			width: 65%;
			height: 1px;
			border: 0;
			background-color: #52edc7;
		}
				
		&__upperCaseText {
			margin-top: 10px;
			font-weight: 200;
			font-size: 48.5px;
			letter-spacing: 1px;
		}
			
		&__button {
			margin:28px 0 5px 89px;
			padding: 18px 0 17px 27px;
			border: 2px solid white;
			width: 218px;
			border-radius: 3px;
			font-weight: 400;
			font-size: 14px;
			letter-spacing: 1.3px;
		}
		
		&__button:hover {
			color: #206957;
			background-color: #52edc7;
			border-color: #52edc7;
			
		}
	}