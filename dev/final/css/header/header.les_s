@import url(https://fonts.googleapis.com/css?family=Raleway:200,300,900);
@sans-serif: 'Raleway', Arial, sans-serif;
@header__textColor: white;

	body {
		width: 100%;
		font-family: @sans-serif;
		margin: 0;
	}

	.header {
/* 		display: block; */
/* 		position: relative;		 */
		background-image: url('../img/header__bg.png');
		background-size: cover;
		width: 100%;
		height: 682px;	
	
		&__logo {
		position: absolute;
		top: 29px;
		left: 91px;
		width: 148px;
		height: 60px;
 		background-image: url('../img/header__logo.png');
		background-repeat: no-repeat;
		background-size: contain;
		}
	
		&__hamburger {
		position: absolute;
		top: 42px;
		right: 90px;
		background-image: url('../img/header__hamburger.png');
		background-repeat: no-repeat;
		background-size: contain;
		width: 32px;
		height: 60px;
	}

		&__avatar {
		position: absolute;
		top: 223px;
		left: 278px;
		padding: 5px;
		border: 1px solid white;
		border-radius: 50%;
			
		&Image {
			position: relative;
			width: 235px;
			height: 235px;
			background-image: url('../img/header__avatar.png');
			background-repeat: no-repeat;
			background-size: contain;
			}
		}
		
		&__content {
			position: absolute;
			top: 267px;
			left: 615px;
			color: @header__textColor;
					
			&BoldText {
				font-weight: 900;
				font-size: 31px;
				letter-spacing: 17.7px;
			}
			
			
			&Line {
				align: center;
				width: 65%;
				height: 1px;
				border: 0;
				background-color: #52edc7;
			}
			
			
			&UpperCaseText {
				font-weight: 200;
				font-size: 47px;
				letter-spacing: .3px;
			}
				
			&Button {
				margin:26px 102px 5px 85px;
				padding: 17px 0 13px 25px;
				border: 2px solid;
				border-radius: 3px;
				font-weight: 300;
				font-size: 14px;
				letter-spacing: .5px;
			}
		}
	
	}