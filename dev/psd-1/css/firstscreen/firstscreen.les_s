@serif: 'Gentium Book Basic', serif;
@serif--italic: 'Gentium Book Basic Italic', serif;
@sans-serif: 'Open Sans', Arial, sans-serif;
@color--gray: #d7d7d7;
@color--white: #fff;

/*для маленьких экранов*/

@media (max-width:479px) {

	/*в варианте для смартфонов блок с автором  и  социальными кнопками зафиксирован внизу страницы*/

	
	body {
		max-width: 100%;
		font-family: @serif;
		margin: 0;
		padding: 0;
		
	}

	/* растягиваем картинку на все окно браузера */
	.firstScreen {
		width: 100%;
		height: 100%;
		
		&__image {
			position: absolute;
			top: 0;
			width: 100%;
			top: -70px;
			height: 210px;
			padding: 0;
		}
		
		&__textContainer {
			position: absolute;
			top: 15px;
			margin: 0;
			padding: 0;
			width: 100%;
			overflow: hidden;
		}

		
		/* firstScreen__text с position: relative внутри firstScreen__textContainer сохраняет ширину и расположение содержимого при изменении размеров окна */
		&__text {
			position: relative;
			/*bottom: 0; */
			width: 100%;
			padding: 30px 0 0 25px;		
			margin: 0 auto;
			
			
		}
		
		&__title {
			/*font-weight: bold;*/
			top: 0;
			font-family: @serif;
			font-size: 48px;
			margin: 0;
			padding: 0;
			color: @color--white;
		}
		
		&__headline {
			font-family: @serif--italic;
			font-style: italic;
			font-size: 22px;
			margin: 0;
			padding: 0;
			color: @color--gray;
		}
		
		&__author {
			position: fixed;
			bottom: 0;
			background-image: url(../img/share__bg.jpg);
			background-size: cover;
			/* float: bottom; */
			z-index: 1;
			width: 100%;
    		font-family: @sans-serif;
			font-weight: bold;
			font-size: 15px;
			padding: 10px 0 7px 25px;
			margin: 0 0 0 -25px;
			color: @color--gray;
		}

		&__authorPhoto {
			margin: -10px 0 0 5px;
			vertical-align: -5px;
			border-radius: 50%;
			width: 25px;
			height: 25px;
			transition-property: transform;
			transition-duration: .5s;
			filter: grayscale(100%);
		}

		/* контейнер для позиционирования социальных кнопок на том же уровне, что и имя автора */
		&__socialContainer {
			z-index: 2;
			position: fixed;
			bottom: 7px;
			right: 15px;
			margin-bottom: 0;
			
		}
		
		&__line {
			display: none;
		}

		&__writtenBy {
			display: none;
		}
	}


	.socialSymbol {
		margin: -10px -3px 0 20px;
		width: 12px;
		height: 12px;
		text-align:right;
		transition-property: transform;
		transition-duration: .5s;
	}

	.socialSymbol:hover, .firstScreen__authorPhoto:hover {
		transform: scale(1.4);
	}

}


/*для горизонтальных устройств*/

@media screen and (max-device-width: 719px) and (orientation: landscape) {
	body {
		font-family: @serif;
		margin: 0;
	}

	/* растягиваем картинку на все окно браузера */
	/*
	html, body {
		height: 100%;
	}  если делать как в макете, то первая картинка по высоте больше экрана, поэтому, не будем равняться на размеры экрана*/

		.firstScreen {
		width: 100%;
		height: 100%;
		
		&__image {
			position: absolute;
			top: 0;
			width: 100%;
			top: -70px;
			height: 210px;
			padding: 0;
		}
		
		&__textContainer {
			position: absolute;
			top: 15px;
			margin: 0;
			padding: 0;
			width: 100%;
			overflow: hidden;
		}	
		/* firstScreen__text с position: relative внутри firstScreen__textContainer сохраняет ширину и расположение содержимого при изменении размеров окна */
		&__text {
			position: relative;
			padding: 0;		
			margin: 0 auto;
			width: 656px;
		}
		
		&__title {
			/*font-weight: bold;*/
			font-family: @serif;
			font-size: 56px;
			margin: 0;
			padding: 0;
			color: @color--white;
		}
		
		&__headline {
			font-family: @serif--italic;
			font-style: italic;
			font-size: 26px;
			margin: 0;
			padding: 0;
			color: @color--gray;
		}
		
		&__line {
			size: 1px;
			color: @color--gray;
		}

		&__writtenBy {
			font-family: @sans-serif;
			font-size: 13px;
			padding-top: 12px;
			margin: 0;
			color: @color--gray;
		}
		
		&__author {
			font-family: @sans-serif;
			font-weight: bold;
			font-size: 15px;
			padding: 0;
			margin: 0;
			color: @color--white;
		}

		&__authorPhoto {
			margin: -10px 0 0 5px;
			vertical-align: -5px;
			border-radius: 50%;
			width: 28px;
			height: 28px;
			transition-property: transform;
			transition-duration: .5s;
			filter: grayscale(100%);
		}

		/* контейнер для позиционирования социальных кнопок на том же уровне, что и имя автора */
		&__socialContainer {
			position: absolute;
			bottom: 0;
			right: 0;
			margin-bottom: 0;
		}
	}




	.socialSymbol {
		margin: -10px -3px 0 20px;
		width: 12px;
		height: 12px;
		text-align:right;
		transition-property: transform;
		transition-duration: .5s;
	}

	.socialSymbol:hover, .firstScreen__authorPhoto:hover {
		transform: scale(1.4);
	}

}


